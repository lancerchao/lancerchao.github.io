.bg-image {
    position: fixed;
    top: 0;
    left: 0;
    padding: 10px;
    -webkit-transform: translateX(-250px) translateY(-800px) rotateX(25deg) rotateY(-25deg);

    width: 2000px;
    height: 4000px;
    opacity : 1;
    z-index: -1;
}

.bg-code1 {
    background: linear-gradient(-45deg, rgba(255,255,255,0.65) 0%, rgba(255,255,255,0.95) 100%), 
        url('../images/background/code1.png')
        repeat 0 0;
}

